// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // Changed from PRISMA_DATABASE_URL
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Image {
  id         String   @id @default(cuid())
  sectionId  String
  url        String
  altText    String?
  fileName   String
  uploadedAt DateTime @default(now())
  isActive   Boolean  @default(true)
  
  @@index([sectionId])
}

model JournalPost {
  id                String           @id @default(cuid())
  slug              String           @unique
  title             String
  subtitle          String
  heroImage         String
  intro             String           @db.Text
  sections          JournalSection[]
  gallery           String[]
  conclusionTitle   String
  conclusionContent String           @db.Text
  conclusionImage   String
  thumbnailImage    String
  excerpt           String           @db.Text
  published         Boolean          @default(false)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

model JournalSection {
  id      String      @id @default(cuid())
  postId  String
  post    JournalPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  title   String
  content String      @db.Text
  image   String
  reverse Boolean     @default(false)
  order   Int
  
  @@index([postId])
}

// Property Management Models
model Property {
  id                String   @id @default(cuid())
  title             String
  slug              String   @unique
  categorySlug      String   // safari-escapes, coastal-retreats, mountain-cabin-getaways
  tagline           String?  @db.VarChar(150)
  description       String   @db.Text
  propertyType      String   // villa, cabin, lodge, tent, etc.
  
  // Location
  country           String
  city              String
  address           String?
  latitude          Float?
  longitude         Float?
  nearbyAttractions String[]
  
  // Capacity
  maxGuests         Int
  bedrooms          Int
  bathrooms         Int
  bedConfigurations String?
  
  // Pricing
  nightlyRate       Float
  weekendRate       Float?
  cleaningFee       Float?
  serviceFeePercent Float?   @default(10)
  minimumStay       Int      @default(1)
  cancellationPolicy String  @default("flexible")
  
  // Availability
  blockedDates      DateTime[]
  instantBook       Boolean  @default(false)
  
  // Status
  isPublished       Boolean  @default(false)
  isFeatured        Boolean  @default(false)
  sortOrder         Int      @default(0)
  
  // Relations
  images            PropertyImage[]
  amenities         PropertyAmenity[]
  
  // Metadata
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([categorySlug])
  @@index([isPublished, isFeatured])
}

model PropertyImage {
  id          String   @id @default(cuid())
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  url         String
  altText     String?
  isFeatured  Boolean  @default(false)
  sortOrder   Int      @default(0)
  
  @@index([propertyId])
}

model PropertyAmenity {
  id          String   @id @default(cuid())
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  name        String
  icon        String?
  
  @@index([propertyId])
}